
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section jsFooter{
    <script>
        $(document).ready(function () {
            $('#btnselect').on('click', function (e) {
                e.preventDefault();
                var finder = new CKFinder();

                finder.selectActionFunction = function (url) {
                    $('#txtAnh').val(url);
                };
                finder.popup();

            })
        })
    </script>
}




<div class="container" id="content" ng-controller="Orther_Slide">
    <h2 class="title-page">Quản lý slides</h2>
    <div class=" table-wrapper container">
        <table class="table table-striped  table-wrapper">
            <tr>
                <th>Id</th>
                <th>Tiêu đề ảnh</th>
                <th>Nguồn ảnh</th>
                <th>Link</th>
                <th>Ưu tiên</th>
                <th>Enable</th>
                <th>Vị trí hiện ảnh</th>
                <th>Ngôn ngữ</th>
                <th>Chức năng</th>
            </tr>
            <tr>
                <td></td>
                <td><input type="text" class="form-control" ng-model="CreateItem.Image_Title" /></td>
                <td><input type="text" class="form-control" ng-model="CreateItem.Image_URL" /></td>
                <td>
                    <input type="text" class="form-control" id="txtAnh" name="Anh" ng-model="CreateItem.Image_Link">
                    <a href="#" id="btnselect">Chọn</a>
                </td>
                <td>
                    <input type="text" class="form-control" ng-model="CreateItem.Image_Order" />

                </td>
                <td><input type="checkbox" class="form-control" ng-model="CreateItem.Enable" /></td>
                <td>
                    <select class="form-control" ng-model="CreateItem.Slide_Type" style="width:150px;">
                        <option value="">Vị trí</option>
                        <option value="sm">Slide main</option>
                        <option value="sf">Slide feedback</option>
                    </select>
                </td>
                <td>

                    <select class="form-control" ng-model="CreateItem.Language" style="width:150px;">
                        <option value="">Chọn ngôn ngữ</option>
                        <option value="VI">Việt nam</option>
                        <option value="EN">English</option>
                    </select>
                </td>
                <td><button type="button" style="font-size:30px; padding:5px 35px; background:none; border:none;" value="Thêm" ng-click="onCreateSlide()"><i class="fa fa-plus" aria-hidden="true"></i></button></td>
            </tr>
            <tr dir-paginate='Item in ListSlide | itemsPerPage:5'>
                <td>{{Item.Tbl_Id}}</td>
                <td>
                    <div ng-show="getStatusSlide(Item.Tbl_Id)">
                        {{Item.Image_Title}}
                    </div>
                    <input class="form-control" type="text" ng-hide="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Image_Title" />
                </td>
                <td>
                    <div ng-show="getStatusSlide(Item.Tbl_Id)">
                        {{Item.Image_URL}}
                    </div>
                    <input class="form-control" type="text" ng-hide="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Image_URL" />
                </td>
                <td>
                    <div ng-show="getStatusSlide(Item.Tbl_Id)">
                        {{Item.Image_Link}}
                    </div>
                    <input class="form-control" type="text" ng-hide="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Image_Link" />
                </td>
                <td>
                    <div ng-show="getStatusSlide(Item.Tbl_Id)">
                        {{Item.Image_Orde}}
                    </div>
                    <input class="form-control" type="text" ng-hide="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Image_Orde" />
                </td>
                <td>
                    <input class="form-control" type="checkbox" ng-disabled="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Enable" />
                </td>
                <td>
                    <div ng-show="getStatusSlide(Item.Tbl_Id)">
                        {{Item.Slide_Type}}
                    </div>
                    <input class="form-control" type="text" ng-hide="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Slide_Type" />
                </td>
                <td>
                    <div ng-show="getStatusSlide(Item.Tbl_Id)">
                        {{Item.Language}}
                    </div>
                    <select class="form-control" ng-model="Item.Language" style="width:150px;" ng-hide="getStatusSlide(Item.Tbl_Id)">
                        <option value="">Chọn ngôn ngữ</option>
                        <option value="VI">Việt nam</option>
                        <option value="EN">English</option>
                    </select>

                </td>
                <td>
                    <div class="btn-group-wrapper" style="text-align:center;">
                        <button ng-show="getStatusSlide(Item.Tbl_Id)" type="button" class="icon-action" ng-click="onEditSlide(Item.Tbl_Id)"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                        <button ng-hide="getStatusSlide(Item.Tbl_Id)" type="button" class="icon-action" ng-click="onSaveSlide(Item)"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
                        <button ng-hide="getStatusSlide(Item.Tbl_Id)" type="button" class="icon-action" ng-click="onCancelSlide()"><i class="fa fa-ban" aria-hidden="true"></i></button>
                        <button ng-show="getStatusSlide(Item.Tbl_Id)" type="button" class="icon-action" ng-click="onDeleteSlide(Item.Tbl_Id)"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                    </div>
                </td>
            </tr>

        </table>
        <dir-pagination-controls boundary-links="true"></dir-pagination-controls>
    </div>

</div>

<script src="~/Scripts/dirPagination.js"></script>

@section JavaScript{


    <script src="~/Scripts/Controller/Orther_Slide/Orther_Slide.js"></script>
}
