
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" id="content" ng-controller="Orther_Slide">
    <h2>Orther_Slide</h2>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Image Title</th>
            <th>Image URL</th>
            <th>Image Link</th>
            <th>Image Order</th>
            <th>Enable</th>
            <th>Slide Type</th>
            <th>Language</th>
            <th>Action</th>
        </tr>
        <tr>
            <td></td>
            <td><input type="text" class="form-control" ng-model="CreateItem.Image_Title" /></td>
            <td><input type="text" class="form-control" ng-model="CreateItem.Image_URL" /></td>
            <td><input type="text" class="form-control" ng-model="CreateItem.Image_Link" /></td>
            <td><input type="text" class="form-control" ng-model="CreateItem.Image_Orde" /></td>
            <td><input type="checkbox" class="form-control" ng-model="CreateItem.Enable" /></td>
            <td><input type="text" class="form-control" ng-model="CreateItem.Slide_Type" /></td>
            <td>
               
                <select class="form-control" ng-model="CreateItem.Language" style="width:150px;">
                    <option value="">Chọn ngôn ngữ</option>
                    <option value="VI">Việt nam</option>
                    <option value="EN">English</option>
                </select>
            </td>
            <td><input type="button" class="btn btn-success" value="Thêm" ng-click="onCreateSlide()" /></td>
        </tr>
        <tr dir-paginate='Item in ListSlide | itemsPerPage:5'>
            <td>{{Item.Tbl_Id}}</td>
            <td>
                <div ng-show="getStatusSlide(Item.Tbl_Id)">
                    {{Item.Image_Title}}
                </div>
                <input class="form-control" type="text" ng-hide="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Image_Title" />
            </td>
            <td>
                <div ng-show="getStatusSlide(Item.Tbl_Id)">
                    {{Item.Image_URL}}
                </div>
                <input class="form-control" type="text" ng-hide="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Image_URL" />
            </td>
            <td>
                <div ng-show="getStatusSlide(Item.Tbl_Id)">
                    {{Item.Image_Link}}
                </div>
                <input class="form-control" type="text" ng-hide="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Image_Link" />
            </td>
            <td>
                <div ng-show="getStatusSlide(Item.Tbl_Id)">
                    {{Item.Image_Orde}}
                </div>
                <input class="form-control" type="text" ng-hide="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Image_Orde" />
            </td>
            <td>
                <input class="form-control" type="checkbox" ng-disabled="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Enable" />
            </td>
            <td>
                <div ng-show="getStatusSlide(Item.Tbl_Id)">
                    {{Item.Slide_Type}}
                </div>
                <input class="form-control" type="text" ng-hide="getStatusSlide(Item.Tbl_Id)" ng-model="Item.Slide_Type" />
            </td>
            <td>
                <div ng-show="getStatusSlide(Item.Tbl_Id)">
                    {{Item.Language}}
                </div>
                <select class="form-control" ng-model="Item.Language" style="width:150px;" ng-hide="getStatusSlide(Item.Tbl_Id)">
                    <option value="">Chọn ngôn ngữ</option>
                    <option value="VI">Việt nam</option>
                    <option value="EN">English</option>
                </select>
               
            </td>
            <td>
                <div class="btn-group">
                    <input ng-show="getStatusSlide(Item.Tbl_Id)" type="button" class="btn btn-info" style="border-radius:30px; padding:5px 15px;; margin-right:2px;" ng-click="onEditSlide(Item.Tbl_Id)" value="Sửa" />
                    <input ng-hide="getStatusSlide(Item.Tbl_Id)" type="button" class="btn btn-info" style="border-radius:30px; padding:5px 15px;; margin-right:2px;"  ng-click="onSaveSlide(Item)" value="Lưu" />
                    <input ng-hide="getStatusSlide(Item.Tbl_Id)" type="button" class="btn btn-info" style="border-radius:30px; padding:5px 15px;; margin-right:2px;"  ng-click="onCancelSlide()" value="Hủy" />
                    <input ng-show="getStatusSlide(Item.Tbl_Id)" type="button" class="btn btn-info" style="border-radius:30px; padding:5px 15px;; margin-right:2px;"  ng-click="onDeleteSlide(Item.Tbl_Id)" value="Xóa" />
                </div>
            </td>
        </tr>

    </table>
    <dir-pagination-controls boundary-links="true"></dir-pagination-controls>
</div>

<script src="~/Scripts/dirPagination.js"></script>

@section JavaScript{


    <script src="~/Scripts/Controller/Orther_Slide/Orther_Slide.js"></script>
}
