<div class="box-dialog page-login-box" ng-controller="AccountController">
    <div class="container">
        <div class="row">

            <!-- form sign in-->
            <div class="col-sm-10 form-signin-user">
                <div>
                    <h2>
                        Đăng nhập
                    </h2>
                </div>
                <div class="btn-close">
                    <button id="btn-close"><i class="fa fa-times-circle" aria-hidden="true"></i></button>
                </div>

                <div class="form-group">
                    <div class="alert alert-danger alert-username">
                        Sai tên đăng nhập
                    </div>
                    <input type="text" id="username" class="form-control" value="" placeholder="Username" autofocus ng-model="user.UserName" required />
                </div>
                <div class="form-group">
                    <div class="alert alert-danger alert-password">
                        Sai mật khẩu
                    </div>
                    <input type="password" id="password" class="form-control" placeholder="Password" ng-model="user.Password" required />
                    <div>
                        <input type="checkbox" /> Luôn đăng nhập
                        <span style="text-align:right; float:right;">
                            <a href="#">Quên mật khẩu?</a>
                        </span>

                    </div>
                </div>
                <div class="form-group">
                    <input type="button" class="btn btn-signin" value="Đăng nhập" ng-click="login()" />
                </div>

            </div>
        </div>
    </div>
</div>
    <script src="~/Scripts/Controller/Account/Account.js"></script>
