
@{
    ViewBag.Title = "chat_box";
}

<div class="chat-box row">

    <div class="title-chat-box col-sm-12">
        <div >
            Để lại tin nhắn cho chúng tôi
        </div>
        <div style="text-align:right;">
            <span style="cursor:pointer">
                <i class="fa fa-chevron-down" aria-hidden="true"></i>
            </span>
        </div>
    </div>

    <div class="content-chat-box col-sm-12">
        <div class="form-group">
            Hiện nay chúng tôi không ở đây. Xin vui lòng để lại lời nhắn
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Xin mời nhập họ tên" />
        </div>
        <div  class="form-group">
            <input type="email" class="form-control" placeholder="Email để chúng tôi liên hệ với bạn" />
        </div>
        <div  class="form-group">
            <textarea class="form-control" rows="2" placeholder="Để lại tin nhắn cho chúng tôi nếu bạn đang gặp vấn đề"></textarea>
        </div>
        <div  class="form-group">
            <button type="button" class="btn btn-submit-ms">Gửi tin nhắn</button>
        </div>
    </div>

</div>

