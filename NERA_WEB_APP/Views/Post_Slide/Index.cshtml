@{
    ViewBag.Title = "Index";
}


<div id="content" ng-controller="Post_Slide">

    <a href="/Post_Slide/CreateSlide/">Thêm mới</a>
    <h1></h1>
    <form>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Post_Id</th>
                    <th> Tbl_Id</th>
                    <th>Image_Title</th>
                    <th>Image_URL</th>
                    <th>Image_Link</th>
                    <th>Image_Order</th>
                    <th>Enable</th>

                    <th>Language</th>
                </tr>
            </thead>
            <tr ng-repeat="a in listSlide">
                <td>{{Post_Id}}</td>
                <td>{{Tbl_Id}}</td>
                <td>{{a.Image_Title}}</td>
                <td>{{a.Image_URL}}</td>
                <td>{{a.Image_Link}}</td>
                <td>{{a.Image_Order}}</td>
                <td>{{a.Enable}}</td>
                <td>{{a.Language}}</td>
                <td>
                    <a type="button" href='/Menu/Edit/{{a.Item_Id}}'>Sửa</a>&nbsp;
                    <input type="button" value="Xóa" ng-click="delete(a)" />

            </tr>
            <tr>
                <td>

                    <input type="button" value="Reload" ng-click="getallSlide()" />
                </td>
            </tr>
        </table>
    </form>
</div>

@section JavaScript{


    <script src="~/Scripts/Controller/Post_Slide/getallslide.js"></script>
}



