
@{
    ViewBag.Title = "Quản lý bảng giá";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" ng-controller="Tariff_Index_Controller">
    <fieldset>
        <legend style="position:relative;">
            <h3 style="text-align:right; position:absolute; right:0; bottom:0;">Quản lý bảng giá</h3>
        </legend>
    </fieldset>

    <div class="table-wrapper container">
        <table class="table table-striped  table-wrapper">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên bảng giá</th>
                    <th>Mô tả</th>
                    <th>Áp dụng từ ngày</th>
                    <th>đến ngày</th>
                    <th>Ngày tạo</th>
                    <th>Người tạo</th>
                    <th></th>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="text" ng-model="CreateItem.Tariff_Name" class="form-control" /></td>
                    <td><input type="text" ng-model="CreateItem.Tariff_Description" class="form-control" /></td>
                    <td><input type="text" ng-model="CreateItem.Effect_From" class="form-control" /></td>
                    <td><input type="text" ng-model="CreateItem.Effect_To" class="form-control" /></td>
                    <td></td>
                    <td></td>
                    <td><input type="button" class="btn btn-add-data" value="Thêm mới" ng-click="onCreate(CreateItem)" /></td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in LstTariff" >
                    <td ng-dblclick="onDbclick(item.TM_Id)">
                        <input type="hidden" ng-model="item.TM_Id" class="form-control" />
                    </td>
                    <td ng-dblclick="onDbclick(item.TM_Id)">
                        <div ng-show="getStatus(item.TM_Id)">{{item.}}</div>
                        <input type="text" ng-hide="getStatus(item.TM_Id)" ng-model="item." class="form-control" />
                    </td>
                    <td ng-dblclick="onDbclick(item.TM_Id)">
                        <div ng-show="getStatus(item.TM_Id)">{{item.}}</div>
                        <input type="text" ng-hide="getStatus(item.TM_Id)" ng-model="item." class="form-control" />
                    </td>
                    <td ng-dblclick="onDbclick(item.TM_Id)">
                        <div ng-show="getStatus(item.TM_Id)">{{item.}}</div>
                        <input type="text" ng-hide="getStatus(item.TM_Id)" ng-model="item." class="form-control" />
                    </td>
                    <td ng-dblclick="onDbclick(item.TM_Id)">
                        <div ng-show="getStatus(item.TM_Id)">{{item.}}</div>
                        <input type="text" ng-hide="getStatus(item.TM_Id)" ng-model="item." class="form-control" />
                    </td>
                    <td ng-dblclick="onDbclick(item.TM_Id)">
                        <div ng-show="getStatus(item.TM_Id)">{{item.}}</div>
                        <input type="text" ng-hide="getStatus(item.TM_Id)" ng-model="item." class="form-control" />
                    </td>
                    <td ng-dblclick="onDbclick(item.TM_Id)">
                        <div ng-show="getStatus(item.TM_Id)">{{item.}}</div>
                        <input type="text" ng-hide="getStatus(item.TM_Id)" ng-model="item." class="form-control" />
                    </td>
                    <td ng-dblclick="onDbclick(item.TM_Id)">
                        <div ng-show="getStatus(item.TM_Id)">{{item.}}</div>
                        <input type="text" ng-hide="getStatus(item.TM_Id)" ng-model="item." class="form-control" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

