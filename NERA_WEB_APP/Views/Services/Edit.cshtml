@model NERA_WEB_APP.Models.Cs_Menu_item

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Edit";
}
@section jsFooter{
    <script type="text/javascript">
        $(document).ready(function () {

            var editor = CKEDITOR.replace('Item_Content'
                ,
                {

                    customConfig: '/Scripts/Controller/BaiViet/ckeditor/config.js',
                    cloudServices_tokenUrl: '/Scripts/Controller/BaiViet/ckeditor/config.js',
                    //filebrowserBrowseUrl = '/Scripts/Controller/BaiViet/ckfinder/ckfinder.html?type=Files',
                    //filebrowserImageBrowseUrl = 'Scripts/Controller/BaiViet/ckfinder/ckfinder.html?Type=Images',
                    //filebrowserFlashBrowseUrl = 'Scripts/Controller/BaiViet/ckfinder/ckfinder.html?Type=Flash',
                    //filebrowserUploadUrl = 'Scripts/Controller/BaiViet/ckfinder/core/connector/aspx/connector.aspx?command=QuickUpload&type=Files',
                    //filebrowserImageUploadUrl = 'Scripts/Controller/BaiViet/ckfinder/core/connector/aspx/connector.aspx?command=QuickUpload&type=Images',
                    //filebrowserFlashUploadUrl = 'Scripts/Controller/BaiViet/ckfinder/core/connector/aspx/connector.aspx?command=QuickUpload&type=Flash',
