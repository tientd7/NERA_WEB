@model NERA_WEB_APP.Models.Cs_Menu_item
@{
    ViewBag.Title = Model.Item_Name;
    ViewBag.DESC = Model.Meta_Desc;
    ViewBag.Keyword = Model.Meta_Key;
}


@Html.Partial("~/Views/Shared/pages/page_title_section/page_title_section.cshtml")
@Html.Partial("~/Views/Shared/pages/breadcrumb/breadcrumb.cshtml")
<section class="details-product-wrap section-padding" ng-controller="ProductCtrl">
    @Html.Partial("~/Views/Product/popupUserInfor.cshtml")
    <div class="container">
        <div class="row">
            <div class="col-sm-5">
                <div class="img-thumb col-sm-12">

                    <img class="img-responsive col-sm-12" id="img-content" style="width: 457px;height: 567px;" src="~/Media/images/about-thumb.jpg" alt="thumb">

                    <div class="col-sm-12 slide-img-product">

                        @*<div class="wrapper-img" style="cursor:pointer">
                                <img src="~/Media/images/counterbg3.png" class="img-thumbnail" alt="">
                                <div class="arrow arrow-left">
                                    <i class="fa fa-chevron-left" aria-hidden="true"></i>
                                </div>
                            </div>*@
                        @*<div class="arrow arrow-left">
                                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                            </div>*@
                        @{
                            if (ViewBag.listImg == null)
                            {
                               
                            }
                            else
                            {
                                foreach (var i in ViewBag.listImg)
                                {
                                    <div class="wrapper-img" style="cursor:pointer">

                                        <img src="@i.Image_Link" class="img-thumbnail" alt="">

                                    </div>
                                }
                            }
                        }

                        @*<div class="arrow arrow-right">
                                <i class="fa fa-chevron-right" aria-hidden="true"></i>
                            </div>*@

                        @*<div class="wrapper-img" style="cursor:pointer">
                                <img src="~/Media/images/about-thumb.jpg" class="img-thumbnail" alt="">
                                <div class="arrow arrow-right">
                                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                </div>
                            </div>*@
                    </div>
                </div>

            </div><!-- /.col -->

            <div class="col-sm-7 infor-details-pro">
                <div>

                    <div>
                        <span>Mã sản phẩm :</span>
                        #@Model.Item_Id
                    </div>
                    <div>
                        <h2>
                            <span>Tên sản phẩm :</span>
                            @Model.Item_Name
                        </h2>

                    </div>

                    <div>
                        <span style="font-size: 20px;">
                            300.000 vnd
                        </span>
                    </div>
                    <div style="margin-bottom: 5px;">
                        <span>
                            Đánh giá
                        </span>
                    </div>
                    <div>
                        <h4>
                            <span>Mô tả:</span>
                            @Model.Meta_Desc
                        </h4>
                    </div>
                </div>
                <div class="state-detail-product">
                    <button type="button" class="btn btn-show-popup">
                        Đăng ký thuê nhà
                    </button>
                </div>

            </div>

        </div><!--/.details-product-wrap-content  -->

    </div><!--/.col-->

</section>

@section JavaScript{
    <script src="~/Scripts/Controller/Product/product.js"></script>
}
<script src="~/Scripts/dirPagination.js"></script>
<script src="~/Scripts/jquery/dialog.js"></script>
<script>
    var images = $(".wrapper-img").find('img').map(function () {
        return $(this).attr('src')
    }).get();

    var wrapperImg = $('.wrapper-img');
    var imgSlide = wrapperImg.find('img');

    imgSlide.click(function () {
        var src = $(this).attr('src');
        $('#img-content').attr('src', src);
    });


    if ($(".wrapper-img").eq(1)) {
        var getsrcSlideCenter = $(".wrapper-img").eq(1).find('img').attr('src');
        $('#img-content').attr('src', getsrcSlideCenter);
    }

</script>



