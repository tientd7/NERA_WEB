
@{
    ViewBag.Title = "Sản phẩm";
}
@Html.Partial("~/Views/Product/popupProduct.cshtml")

@Html.Partial("~/Views/Shared/pages/page_title_section/page_title_section.cshtml")
<!--  FILTER -->


<section class="sortby-wrapper breadcrumb-wrapper">
    <div class="breadcrumb-wrapper">
        <span>
            <a href="/Home/Index">Trang chủ </a>
            &nbsp;
            <i class="fa fa-angle-right" aria-hidden="true"></i>
            &nbsp;
            @ViewBag.Title
        </span>
    </div>
    <div class="sort-by-wrapper">
        <select name="" id="">
            <option value="">Sort by</option>
            <option value="">Loại phòng</option>
            <option value="">Khu vực</option>
            <option value="">Số phòng</option>
            <option value="">Diện tích</option>
            <option value="">Giá</option>
        </select>
    </div>

</section>
<!--  MAIN -->
<section id="main-product" ng-controller="ProductCtrl">

    @* tạo vòng lặp
        show thông tin sản phẩm *@
    <fieldset>
        <legend style="position:relative;">
            <span style="text-align:left;">
                <h3>
                    Sản phẩm
                </h3>
            </span>
            <span style="text-align:right; position:absolute; right:0; bottom:0;">
                <h4>
                    <a href="#" class="btn-show-popup">Thêm mới</a>
                </h4>
            </span>

        </legend>
    </fieldset>
    <div ng-repeat="i in  ItemSP">
        <div class="details-product product">
            <div class="img-product-wrapper">
                <img src="~/Media/images/furniture.jpg" />
            </div>

            <div class="infor-product-wrapper">
                <div class="inror-product">
                    <div>
                        <span>Mã sản phẩm :</span>
                        @*#{{i.Item_Id}}*@
                    </div>
                    <div>
                        <h2>
                            <span>Tên sản phẩm :</span>
                            {{i.Item_Name}}
                        </h2>

                    </div>
                    <div>
                        <h4>
                            <span>Mô tả:</span>
                            {{i.Meta_Desc}}
                        </h4>
                    </div>
                    <div class="action-product">
                        <div>
                            <button class="btn btn-edit"><i class="fa fa-edit"></i></button>
                        </div>
                        <div>
                            <button class="btn btn-remove" ng-click="Delete(i.Item_Id)"><i class="fa fa-remove"></i></button>
                        </div>
                    </div>
                </div>
                <div class="state-product">
                    <span>
                        Trạng thái: Đã thuê
                    </span>
                </div>


            </div>
        </div>

    </div>



</section>

<script src="~/Scripts/jq dialog/dialog.js"></script>
@section JavaScript{

    <script src="~/Scripts/Controller/Product/product.js"></script>
}