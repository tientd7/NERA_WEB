
<div class="chat-box-wrapper" ng-controller="CBCtrl">
    <div class="row">
        <div class="title-chat-box-wrapper col-sm-12">
            <div>
                Liên hệ với chúng tôi
            </div>
            <div class="action-box" style="text-align:right;">
                <span style="cursor:pointer;">
                    <i class="fa fa-chevron-down"></i>
                </span>
            </div>
        </div>
        <div class="message-box">
            <div class="alert alert-noti-success-msg-box" style="top: 70%;z-index: 10000;position: fixed;text-align: center; display:none;">
                <h4>
                    Cảm ơn thông tin phản hồi của bạn!
                </h4>
            </div>
            <div class="form-msg-box">

                <div>
                    Hiện tại chúng tôi không ở đây, để lại tin nhắn nếu bạn gặp vấn đề

                </div>
                <div class="form-group">
                    <input type="text" name="" ng-model="Item.Request_Name" class="form-control" placeholder="Tên của bạn" />
                </div>
                <div class="form-group">
                    <input type="number" name="" ng-model="Item.Request_Phone" class="form-control" placeholder="Số điện thoại của bạn" />
                </div>
                <div class="form-group">

                    <textarea name="" ng-model="Item.Request_Content" class="form-control" placeholder="Nhập tin nhắn của bạn ở đây"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-submit-ms" ng-click="addData(Item)">Gửi tin nhắn</button>
                </div>
            </div>


        </div>
    </div>
</div>
@section JavScript{
    <script src="~/Scripts/Controller/chatbox/chatboxCtrl.js"></script>
}
<script src="~/Scripts/jquery/chatbox.js"></script>


