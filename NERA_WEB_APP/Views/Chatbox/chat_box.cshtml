

<div class="chat-box-wrapper" ng-controller="CBCtrl">
    <div class="row">
        <div class="title-chat-box-wrapper col-sm-12">
            <div>
                Để lại thông tin của bạn
            </div>
            <div class="action-box" style="text-align:right;">
                <span style="cursor:pointer;">
                    <i class="fa fa-chevron-down"></i>
                </span>
            </div>
        </div>
        <div class="message-box">
            <div>
                Hiện tại chúng tôi không ở đây, để lại tin nhắn nếu bạn gặp vấn đề
                {{data}}
            </div>
            <div class="form-group">
                <input type="text" name="" ng-model="data.Request_Name" class="form-control" placeholder="Tên của bạn" />
            </div>
            <div class="form-group">
                <input type="number" name="" ng-model="data.Request_Phone" class="form-control" placeholder="Số điện thoại của bạn" />
            </div>
            <div class="form-group">
                <textarea name="" ng-model="data.Request_Content" class="form-control" placeholder="Nhập tin nhắn của bạn ở đây"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-submit-ms" ng-click="addData()">Gửi tin nhắn</button>
            </div>
        </div>
    </div>
</div>



<script>
    $('.action-box span').click(function () {
        $('.message-box').toggle(200);
    });
</script>




