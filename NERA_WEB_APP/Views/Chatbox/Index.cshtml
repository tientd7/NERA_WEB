
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h1></h1>
<form>
    <div ng-controller="CBCtrl">
        Order By: <select ng-model="sort">
         <option value="">--Chọn--</option>       
            <option value="Create_date">Ngày Viết</option>
        </select>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Chat_Id</th>
                    <th>Request_Name</th>
                    <th>Request_Phone</th>
                    <th>Request_Content</th>
                    <th>Unread</th>
                    <th>Create_date</th>
                </tr>
            </thead>
            <tr ng-repeat="a in data | orderBy:'Unread':true | orderBy:sort">
                <td>{{a.Chat_Id}}</td>
                <td>{{a.Request_Name}}</td>
                <td>{{a.Request_Phone}}</td>
                <td>{{a.Request_Content}}</td>
                <td>{{a.Unread}}</td>
                <td>{{a.Create_date|mydate| date: 'dd-MMM-yyyy'}}</td>

                <td>
                    <input type="checkbox" ng-model="a.Unread" ng-change="check()" />

            </tr>
            <tr>
                <td></td>
            </tr>
        </table>
    </div>
</form>


@section JavaScript{


    <script src="~/Scripts/Controller/chatbox/chatboxCtrl.js"></script>
}



